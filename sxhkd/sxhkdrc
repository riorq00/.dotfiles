#
# wm independent hotkeys
#

# teminal emulator
super + Return
        alacritty

# program launcher
super + p
        /home/riorq/.config/rofi/launchers/type-2/launcher.sh

super + F4
        /home/riorq/.config/rofi/scripts/rofi-wifi-menu.sh

# make sxhkd reload its configutation files:
super + w
        pkill -USR1 -x sxhkd

# bright
super + XF86MonBrightnessUp
        brightnessctl set +10

super + XF86MonBrightnessDown
        brightnessctl set 10-

# audio
super + XF86AudioLowerVolume
        amixer -D pulse sset Master 5%-

super + XF86AudioRaiseVolume
        amixer -D pulse sset Master 5%+

super + XF86AudioMute
        amixer -D pulse sset Master toggle

# brave
super + F1
        brave

# thunar
super + F2
        thunar

#
# bspwm hotkeys
#++

# quit/restart bspwm
super + alt + {q,r}
        bspc {quit, wm -r}

# close and kill
super + q
        bspc node -{c,k}

# alternate between the tiled and monocle layout
super + ctrl + F3
        bspc desktop -l next

# send the newest marked node to the newest preselected node
super + ctrl + y
        bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + ctrl + g
        bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,s,v}
        bspc node -t {tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
        bspc node -g {marked,locked,sticky,private}

#
# focus/swap

# focus the node in the given direction
super + {_,shift +}{Left,Down,Up,Right}
        bspc node -{f,s} {west,south,north,east}

# focus the next/previus window in the desktop
super + c bspc node -f {next,prev}.local.!hidden.window


# focus the last node/desktop
super + {o,i}
        bspc wm -h off; \
        bspc node {older,newer} -f; \
        bspc wm -h on

# focus or send to the given desktop
super + {_, shift +}{1-9,0}
        bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + alt + {Left,Down,Up,Right}
        bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
        bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
        bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
        bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
# print
#

super + Print
        flameshot full -p ~/Downloads/besteiras/prints/

super + shift + Print
        flameshot gui -p ~/Downloads/besteiras/prints/


#
# move/resize
#

# expand/contract a window
super + control + {Left,Down,Up,Right}
        bspc node -z {left -20 0 || bspc node -z right -20 0, \
        bottom 0 20 || bspc node -z top 0 20,\
        top 0 -20 || bspc node -z bottom 0 -20,\
        right 20 0 || bspc node -z left 20 0}

# move a floating window
super + alt {Left,Down,Up,Right}
        bspc node -v {-20 0,0 20,0 -20,20 0}

super + Scroll_Lock
        xset led on

super + ctrl + Scroll_Lock
        xset led off
